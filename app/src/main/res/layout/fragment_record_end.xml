<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/curImage0"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@mipmap/doge_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/curImage1"
            android:src="@mipmap/doge_launcher"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/curImage2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@mipmap/doge_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/curImage3"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@mipmap/doge_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/curImage4"
            android:src="@mipmap/doge_launcher"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/curImage5"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@mipmap/doge_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/view_magenta0"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:id="@+id/record_end_title"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:textAlignment="center"
            android:textSize = "30sp"
            android:textAllCaps="true"
            android:textStyle="bold"

            android:text="the title of the work"
            />

        <TextView
            android:id="@+id/record_end_content"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize = "25sp"
            android:text="Finished walking. You've come this far. How far can I go?"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="200dp"
            android:background="@drawable/button_blue0"
            android:textColor="@color/white"
            android:text="Finish"
            android:textSize="30dp"
             />
    </LinearLayout>


</LinearLayout>