<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/button1"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginEnd="178dp"
        android:text="Listen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_listen_result" />

    <EditText
        android:id="@+id/editTextTab"
        android:layout_width="413dp"
        android:layout_height="123dp"
        android:text="This is the text for the TTS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/test_listen_result"
        android:layout_width="410dp"
        android:layout_height="165dp"
        android:text="This is the result for the STT"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/editTextTab"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="27dp"
        android:text="Read"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_listen_result" />
</androidx.constraintlayout.widget.ConstraintLayout>